<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <Title>Gunnsoft.Api</Title>
    <AssemblyName>Gunnsoft.Api</AssemblyName>
    <PackageId>Gunnsoft.Api</PackageId>
    <Authors>Andrew Gunn</Authors>
    <Company>Gunnsoft</Company>
    <AssemblyTitle>Gunnsoft.Api</AssemblyTitle>
    <Description>
      Gunnsoft API
    </Description>
    <Copyright>Copyright Â© Gunnsoft 2018</Copyright>
    <PackageTags>Gunnsoft;AspNetCore;API</PackageTags>
    <PackageProjectUrl>https://github.com/Gunnsoft/gunnsoft-api</PackageProjectUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/Gunnsoft/gunnsoft-api</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="4.8.1" />
    <PackageReference Include="FluentValidation" Version="8.0.100" />
    <PackageReference Include="IdentityModel" Version="3.9.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Versioning" Version="2.3.0" />
    <PackageReference Include="MongoDB.Driver" Version="2.7.0" />
    <PackageReference Include="Serilog" Version="2.7.1" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="3.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Exceptions\AuthenticatedUserNotFound\Version1\" />
    <Folder Include="Exceptions\UnknownClientId\Version1\" />
    <Folder Include="Exceptions\UnknownSubject\Version1\" />
  </ItemGroup>

</Project>
